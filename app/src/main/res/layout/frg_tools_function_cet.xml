<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_style_4" />

    <EditText
        android:id="@+id/ftsc_et_zkzh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入准考帐号："
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ftsc_et_xm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入姓名："
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/ftsc_bt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询" />

    <LinearLayout
        android:id="@+id/ftsc_contentReportCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/ftsc_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <TextView
            android:id="@+id/ftsc_tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校" />

        <TextView
            android:id="@+id/ftsc_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型" />

        <TextView
            android:id="@+id/ftsc_tv_zkzh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准考证号" />

        <TextView
            android:id="@+id/ftsc_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间" />

        <TextView
            android:id="@+id/ftsc_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总成绩" />

        <TextView
            android:id="@+id/ftsc_tv_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="听力" />

        <TextView
            android:id="@+id/ftsc_tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读" />

        <TextView
            android:id="@+id/ftsc_tv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写作" />
    </LinearLayout>
</LinearLayout>