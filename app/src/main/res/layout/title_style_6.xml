<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ts6_content"
    style="@style/titleStyle"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ts6_ib_left"
        style="@style/titleContentImage"
        android:background="@drawable/selecter_clearity_gravy"
        android:src="@drawable/ic_back_black" />


    <TextView
        android:id="@+id/ts6_tv_name"
        style="@style/titleNameStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/black" />


    <ImageButton
        android:id="@+id/ts6_ib_right_0"
        style="@style/titleContentImage"
        android:background="@drawable/general_item_selector2"
        android:src="@drawable/ic_heart_black" />

    <TextView
        android:id="@+id/ts6_tv_right_0"
        style="@style/Dynamic_IconText_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageButton
        android:id="@+id/ts6_ib_right_1"
        style="@style/titleContentImage"
        android:background="@drawable/general_item_selector2"
        android:src="@drawable/ic_comment_black" />

    <TextView
        android:id="@+id/ts6_tv_right_1"
        style="@style/Dynamic_IconText_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageButton
        android:id="@+id/ts6_ib_right_2"
        style="@style/titleContentImage"
        android:background="@drawable/general_item_selector2"
        android:src="@drawable/ic_more_black" />
</LinearLayout>
