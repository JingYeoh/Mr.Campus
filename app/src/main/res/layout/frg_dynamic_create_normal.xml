<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_style_7" />

    <LinearLayout
        android:id="@+id/fdcn_ll_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/fdcn_ll_pic1To3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fdcn_iv_pic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@color/default_picture" />

            <LinearLayout
                android:id="@+id/fdcn_ll_pic2To3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fdcn_iv_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/default_picture"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/fdcn_iv_pic3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/default_picture"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fdcn_ll_pic4To6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fdcn_iv_pic4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/fdcn_iv_pic5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/fdcn_iv_pic6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/fdcn_et_inputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clarity"
        android:hint="这一刻，我想说......"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textSize="13sp" />
</LinearLayout>