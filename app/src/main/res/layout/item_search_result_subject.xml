<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchItemContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selecter_clearity_gravy"
    android:orientation="horizontal"
    android:backgroundTint="@color/white"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/isrs_tv_subjectType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_tag_today"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="专题类型"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/isrs_tv_subjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="专题标题"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/isrs_tv_subjectDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/B_black_70"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_bg_gravy"
                android:maxLines="5"
                android:text="@string/large_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/isrs_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/isrs_iv_subjectTag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_subscription_already" />
</RelativeLayout>