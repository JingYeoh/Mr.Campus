<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人中心" />

    <Button
        android:id="@+id/bt_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="首页" />

    <Button
        android:id="@+id/bt_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地图" />

    <Button
        android:id="@+id/bt_zhuanti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="专题" />

    <Button
        android:id="@+id/bt_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小工具" />

    <Button
        android:id="@+id/bt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息" />

    <Button
        android:id="@+id/bt_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置" />

    <Button
        android:id="@+id/bt_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学校" />

</LinearLayout>
