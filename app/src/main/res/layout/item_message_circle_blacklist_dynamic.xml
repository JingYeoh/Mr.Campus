<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selecter_clearity_gravy"
    android:orientation="horizontal">

    <View
        android:id="@+id/message_status_read"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/main_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imcbd_tv_tag_in$out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_tag_subject_right"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="被关小黑屋"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/imcbd_contentCirclePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imcbd_iv_circlePicture"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@color/default_picture" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imcbd_tv_circleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="圈子名称"
                    android:textColor="@color/main_theme_green"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/imcbd_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="20"
                    android:text="您的动态已被拉黑"
                    android:textColor="@color/black_200" />

                <TextView
                    android:id="@+id/imcbd_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:text="时间"
                    android:textColor="@color/line"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/imcbd_tv_dynamicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gravy_70"
                    android:text="@string/large_text"
                    android:textColor="@color/line"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imcbd_iv_dynamicPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/default_picture"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
