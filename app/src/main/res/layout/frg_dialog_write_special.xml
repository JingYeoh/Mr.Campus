<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fdws_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B_black_70">

    <LinearLayout
        android:id="@+id/fdws_ll_specialContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fdws_ll_confrssion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_timeline" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="表白"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fdws_ll_taunted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_article" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吐槽"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fdws_ll_lost$found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_topic" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失物"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fdws_ll_fleaMarket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_timeline" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳蚤市场"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fdws_ll_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_article" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求霸霸"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fdws_ll_foundPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Dynamic_HeadImg_style"
                    android:padding="5dp"
                    android:src="@drawable/ic_topic" />

                <TextView
                    style="@style/Dynamic_IconText_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找伙伴"
                    android:textColor="@color/text_gravy_light" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/fdws_iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_close_white" />
    </LinearLayout>


</RelativeLayout>