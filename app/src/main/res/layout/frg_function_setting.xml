<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_general"
    android:orientation="vertical">

    <include layout="@layout/title_style_4" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ffs_tv_push"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="推送通知"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_recommend"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="推荐菌菌" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_praise"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="给个好评" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light" />

            <LinearLayout
                android:id="@+id/fss_ll_clearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    style="@style/SystemSettingTextShowStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="清除缓存" />

                <TextView
                    android:id="@+id/fss_tv_cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00M"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/text_gravy_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_general" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_aboutSoftWear"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="关于菌菌" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_feedBack"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="意见反馈" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_question"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:padding="20dp"
                android:text="常见问题" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/text_gravy_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_general" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/text_gravy_light" />

            <TextView
                android:id="@+id/fss_tv_logout"
                style="@style/SystemSettingTextShowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_clearity_gravy"
                android:gravity="center"
                android:padding="20dp"
                android:text="退出当前帐号"
                android:textColor="@color/main_theme_green" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/gravy_70" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_general"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前版本：V"
                    android:textColor="@color/black_200"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/fss_tv_vision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textColor="@color/black_200"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
