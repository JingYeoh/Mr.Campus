<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dynamic_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idoa_iv_headImg"
            style="@style/Dynamic_HeadImg_style"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@color/default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idoa_tv_name"
                style="@style/Dynamic_TitleName_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="作者名称" />

            <TextView
                android:id="@+id/idoa_tv_time"
                style="@style/Dynamic_Time_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8 minutes age" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idoa_ll_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/idoa_iv_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@color/default_picture" />

        <TextView
            android:id="@+id/idoa_tv_title"
            style="@style/Dynamic_Title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="文章标题" />

        <TextView
            android:id="@+id/idoa_tv_content"
            style="@style/Dynamic_ContentText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/large_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                style="@style/Dynamic_Icon_style"
                android:src="@drawable/ic_share_list" />

            <ImageView
                style="@style/Dynamic_Icon_style"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_comment_gray" />

            <TextView
                android:id="@+id/idoa_tv_commentNum"
                style="@style/Dynamic_IconText_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0" />

            <ImageView
                style="@style/Dynamic_Icon_style"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_heart_list_white" />

            <TextView
                android:id="@+id/idoa_tv_likeNum"
                style="@style/Dynamic_IconText_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>