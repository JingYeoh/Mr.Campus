<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iscps_content"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/selecter_clearity_gravy"
    android:gravity="top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iscps_iv_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@color/default_picture" />

    <ImageView
        android:id="@+id/iscps_iv_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo_delete_image" />
</RelativeLayout>