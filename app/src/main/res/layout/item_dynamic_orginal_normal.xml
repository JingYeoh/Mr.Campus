<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idon_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/Dynamic_HeadImg_style"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_user_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                style="@style/Dynamic_TitleName_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="作者名称" />

            <TextView
                style="@style/Dynamic_Time_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8 minutes age" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_personal" />

    <TextView
        style="@style/Dynamic_ContentText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="介绍啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/Dynamic_Icon_style"
            android:src="@drawable/ic_share_list" />

        <ImageView
            style="@style/Dynamic_Icon_style"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_comment_gray" />

        <TextView
            style="@style/Dynamic_IconText_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9" />

        <ImageView
            style="@style/Dynamic_Icon_style"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_heart_list_white" />

        <TextView
            style="@style/Dynamic_IconText_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9" />

    </LinearLayout>
</LinearLayout>