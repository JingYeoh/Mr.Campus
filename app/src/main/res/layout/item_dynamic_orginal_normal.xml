<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dynamic_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_general"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idon_iv_headImg"
            style="@style/Dynamic_HeadImg_style"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@color/default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idon_tv_name"
                style="@style/Dynamic_TitleName_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="作者名称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idon_tv_time"
                    style="@style/Dynamic_Time_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8 minutes age" />

                <TextView
                    android:id="@+id/idon_tv_action"
                    style="@style/Dynamic_Time_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="发布了" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idon_ll_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/idon_ll_pic1To3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idon_iv_pic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@color/default_picture" />

            <LinearLayout
                android:id="@+id/idon_ll_pic2To3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/idon_iv_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/default_picture"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/idon_iv_pic3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/default_picture"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idon_ll_pic4To6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idon_iv_pic4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/idon_iv_pic5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/idon_iv_pic6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/default_picture"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/idon_tv_content"
        style="@style/Dynamic_ContentText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:text="@string/large_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idon_iv_share"
            style="@style/Dynamic_Icon_style"
            android:src="@drawable/ic_share_list" />

        <ImageView
            android:id="@+id/idon_iv_comment"
            style="@style/Dynamic_Icon_style"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_comment_gray" />

        <TextView
            android:id="@+id/idon_tv_commentNum"
            style="@style/Dynamic_IconText_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9" />

        <ImageView
            android:id="@+id/idon_iv_heart"
            style="@style/Dynamic_Icon_style"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_heart_list_white" />

        <TextView
            android:id="@+id/idon_tv_likeNum"
            style="@style/Dynamic_IconText_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9" />

    </LinearLayout>
</LinearLayout>