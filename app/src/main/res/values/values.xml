<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--标题栏样式-->
    <style name="titleStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--标题栏中的图片样式-->
    <style name="titleContentImage">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <!--标题栏名称样式-->
    <style name="titleNameStyle">
        <item name="android:textSize">17sp</item>
    </style>

    <!--tabLayout的主题-->
    <style name="tabLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">false</item>
    </style>

    <!--输入框默认的主题-->
    <style name="inputEditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--按钮通用住主题-->
    <style name="buttonGeneralStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!--左侧滑菜单的字体大小-->
    <style name="menuLeftSideTextStyle">
        <item name="android:textSize">19sp</item>
    </style>
    <!--自定义的Toolar样式-->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/clarity</item>
        <!-- Support library compatibility -->
        <item name="background">@color/clarity</item>
        <!--解决左边一直有一块边距的问题 contentInsetStart = 0 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
